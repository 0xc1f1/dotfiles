auto-reload yes

browser "firefox"
macro m set browser "mpv %u" ; open-in-browser ; set browser "firefox"
macro o set browser "firefox %u" ; open-in-browser ; set browser "firefox"

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

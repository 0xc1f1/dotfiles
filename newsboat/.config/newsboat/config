auto-reload yes
reload-time 1
reload-threads 100
refresh-on-startup yes

browser "brave"
bind-key f macro-prefix
macro j set browser "mpv-script %u &" ; open-in-browser ; set browser "brave"
macro d set browser "mpv-script %u &" ; goto-url 4 ; set browser "brave"
macro l set browser "rtv %u" ; open-in-browser ; set browser "brave"
macro o set browser "brave %u" ; open-in-browser ; set browser "brave"

# unbind keys
# unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit
bind-key a quit

# proxy
use-proxy yes
proxy-auth newsboat1:newsboat1
proxy-type socks5h
proxy 127.0.0.1:9050
